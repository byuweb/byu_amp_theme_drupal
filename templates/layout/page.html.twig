    {% endif %} #}
    <div class="byu-search-form">
      <form class="byu-search-container">
        <input type="search" placeholder="Search" class="byu-search-input" title="Search">
      </form>
      <button class="byu-search-button" type="submit">
        <amp-img
            src="https://cdn.byu.edu/shared-icons/latest/fontawesome/search-white.svg"
            alt="Run Search"
            width="17px"
            height="17px">
        </amp-img>
      </button>
    </div>
  </div>
</header>


  <div class="main-top {{ hero_width }} {{ hero_image_width }} {%  if hero_width == 'custom-width' %} {%  if custom_width %} " style="width: {{ custom_width }}px{% endif %} {% endif %}">
    {% if page.slide_show %}
      {{ page.slide_show }}
    {% endif %}
    <div class="page-content">
      {{ page.content }}
    </div>
  </div>


<footer class="byu-footer">
  <div class="byu-footer-gray">
    {{ page.footer }}
  </div>

  <div class="byu-footer-blue">
    <div class="byu-footer-university-name">
      <a href="https://home.byu.edu/home/" target="_blank">
