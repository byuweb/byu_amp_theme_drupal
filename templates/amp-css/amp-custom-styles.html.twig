/*--- GENERAL ---*/
html, body {
margin: 0;
font-family: "Ringside Narrow A", "Ringside Narrow B", Helvetica, sans-serif;
color: #141414;
}
div {
display: block;
}
.page-content {
max-width: 1200px;
padding: 0 16px;
margin: 0 auto;
}
img {
padding: 8px;
}
/*-- SIDEBAR --*/
amp-sidebar {
background-color: #F2F2F2;
}
.sidebar {
padding: 8px;
margin: 0;
}
.sidebar ul {
list-style: none;
padding-left: 0;
}
.sidebar > li {
list-style: none;
margin-bottom:12px;
}
.sidebar a {
text-decoration: none;
color: #002E5D;
}
.sidebar a:hover {
color: #0057B8;
}
.close-sidebar {
font-size: 1.5em;
padding-left: 8px;
}
/*--- HEADER ---*/
.byu-header {
width: 100%;
font-family: "Ringside Narrow A","Ringside Narrow B",Helvetica,sans-serif;
font-size: 18px;
display: block;
margin: 0;
padding: 0;
max-width: 100%;
justify-content: center;
flex: 1;
flex-basis: 100%;
box-sizing: border-box;
}
.byu-header-content-primary {
background-color: #002e5d;
color: #fff;
display: flex;
flex-direction: row;
flex-wrap: nowrap;
justify-content: space-between;
flex: 1;
box-sizing: border-box;
min-height: 34px;
padding: 11px 16px;
align-items: baseline;
}
.byu-site-title {
overflow: hidden;
flex: 1;
display: flex;
flex-direction: column;
font-size: 22px;
font-family: "Vitesse A","Vitesse B",Georgia,serif;
text-decoration: none;
}
.byu-site-title a {
color: #fff;
text-decoration: none;
}
.byu-header-content-secondary {
line-height: 24px;
font-size: 18px;
}
.byu-header-actions {
text-decoration: none;
font-size: 13px;
font-weight: 500;
text-transform: uppercase;
}
.byu-header-actions a {
color: #fff;
text-decoration: none;
}
.byu-search-form {
max-height: 35px;
transition: max-height .5s cubic-bezier(.4,0,.2,1),transform .5s cubic-bezier(.4,0,.2,1);
will-change: max-height,transform;
overflow: hidden;
transform: scale(1);
transform-origin: top;
display: flex;
align-items: stretch;
align-content: center;
width: auto
}
.byu-search-container {
flex: 1
}
.byu-search-input {
border: none;
-webkit-appearance: none;
border-radius: 0;
margin: 0;
box-sizing: border-box;
font-family: Ringside Narrow A,Ringside Narrow B,Helvetica,sans-serif;
font-size: 13px;
font-weight: 500;
color: #002e5d;
padding: 5px 10px 5px 16px;
width: 100%;
height: 35px;
border-bottom: 1px solid #c5c5c5;
}
.byu-search-button {
background-color: #666;
border: 1px solid #666;
color: #fff;
width: 53px;
height: 35px;
display: flex;
align-items: center;
box-sizing: border-box;
padding: 0 16px;
}
.byu-search-button img {
width: 17px;
height: 17px;
}
/*--- FOOTER --- */
.byu-footer {

}
.byu-footer-blue {
background-color: #002e5d;
text-align: center;
font-weight: 400;
font-size: 12px;
color: #fff;
width: 100%;
padding: 21px 0;
display: flex;
justify-content: center;
align-items: center;
flex-direction: column;
}
.byu-footer-university-name {
max-width: 1200px;
width: 100%;
padding: 0 8px;
box-sizing: border-box;
}
.byu-footer-university-name img {
max-width: 100%;
margin: -10px 0;
}
.university-logo {
max-height: 40px;
max-width: 450px;
margin: 0 auto;
}
.byu-footer-university-info a {
color: #fff;
text-decoration: none;
}
.byu-footer-university-info>:not(:first-of-type):before {
display: inline-block;
color: #fff;
content: "|";
text-align: center;
width: 1em;
}
.byu-footer-gray {
background-color: #e5e5e5;
}
.byu-footer-gray-content {
max-width: 1200px;
margin: 0 auto;
height: auto;
box-sizing: border-box;
padding: 0 8px;
display: flex;
flex-direction: row;
flex-wrap: wrap;
}
.byu-footer-column {
flex-grow: 1;
margin: 16px 8px 0;
width: calc(20% - 16px);
}
.byu-footer-column a {
color: #666;
text-decoration: none;
}
.byu-footer a:hover {
color: #005EB8;
}
.byu-footer-column:first-child {
margin-left: 0;
}
.byu-footer-column:last-child {
margin-right: 0;
}
.byu-footer-column-header {
font-family: Vitesse A,Vitesse B,Georgia,serif;
text-transform: uppercase;
color: #002e5d;
font-size: 20px;
border-bottom: 1px solid #c5c5c5;
padding-bottom: 3px;
font-weight: 400;
width: 100%;
display: inline-block;
}
.byu-footer-action-button {
background-color: #666;
font-family: Vitesse A,Vitesse B,Georgia,serif;
font-size: 20px;
color: #fff;
display: inline-block;
text-align: center;
line-height: 2.1em;
height: 45px;
width: auto;
min-width: 125px;
margin: 10px 0 20px;
-webkit-box-shadow: 0 3px 5px 0 rgba(0,0,0,.35);
-moz-box-shadow: 0 3px 5px 0 rgba(0,0,0,.35);
box-shadow: 0 3px 5px 0 rgba(0,0,0,.35)
}
.byu-footer-action-button a {
color: #fff;
text-decoration: none;
margin: 0 20px;
}

/* ---------- Utility classes ----------- */

.hidden {
display: none;
}

.visually-hidden {
position: absolute;
clip: rect(1px, 1px, 1px, 1px);
overflow: hidden;
height: 1px;
width: 1px;
word-wrap: normal;
}

.visually-hidden.focusable:active,
.visually-hidden.focusable:focus {
position: static;
clip: auto;
overflow: visible;
height: auto;
width: auto;
}

.invisible {
visibility: hidden;
}

.clearfix:after {
content: "";
display: table;
clear: both;
}

/* ---------- Skip Link ----------- */

.amp-skip-link {
left: 50%;
-webkit-transform: translateX(-50%);
-ms-transform: translateX(-50%);
transform: translateX(-50%);
z-index: 50;
background: #444;
background: rgba(0, 0, 0, 0.6);
font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
font-size: 0.94em;
line-height: 1.7em;
padding: 1px 10px 2px;
border-radius: 0 0 10px 10px;
border-bottom-width: 0;
outline: 0;
}

.amp-skip-link.visually-hidden.focusable:focus {
position: absolute;
color: #fff;
}

/* ---------- Messages ----------- */

.messages__wrapper {
padding: 20px 0 5px 8px;
font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
margin: 8px 0;
}

[dir="rtl"] .messages__wrapper {
padding: 20px 8px 5px 0;
}

.messages {
background: no-repeat 10px 17px;  /* LTR */
border: 1px solid;
border-width: 1px 1px 1px 0;  /* LTR */
border-radius: 2px;
padding: 15px 20px 15px 35px; /* LTR */
word-wrap: break-word;
overflow-wrap: break-word;
}

[dir="rtl"] .messages {
border-width: 1px 0 1px 1px;
background-position: right 10px top 17px;
padding-left: 20px;
padding-right: 35px;
text-align: right;
}
.messages + .messages {
margin-top: 1.538em;
}

.messages__list {
list-style: none;
padding: 0;
margin: 0;
}

.messages__item + .messages__item {
margin-top: 0.769em;
}

/* See .color-success in Seven's colors.css */
.messages--status {
color: #325e1c;
border-color: #c9e1bd #c9e1bd #c9e1bd transparent;  /* LTR */
background: #f3faef url(../../../../../core/misc/icons/73b355/check.svg);
box-shadow: -8px 0 0 #77b259; /* LTR */
}

[dir="rtl"] .messages--status {
border-color: #c9e1bd transparent #c9e1bd #c9e1bd;
box-shadow: 8px 0 0 #77b259;
margin-left: 0;
}

/* See .color-warning in Seven's colors.css */
.messages--warning {
background: #fdf8ed url(../../../../../core/misc/icons/e29700/warning.svg);
border-color: #f4daa6 #f4daa6 #f4daa6 transparent;  /* LTR */
color: #734c00;
box-shadow: -8px 0 0 #e09600; /* LTR */
}

[dir="rtl"] .messages--warning {
border-color: #f4daa6 transparent #f4daa6 #f4daa6;
box-shadow: 8px 0 0 #e09600;
}

/* See .color-error in Seven's colors.css */
.messages--error {
color: #a51b00;
background: #fcf4f2 url(../../../../../core/misc/icons/e32700/error.svg);
border-color: #f9c9bf #f9c9bf #f9c9bf transparent;  /* LTR */
box-shadow: -8px 0 0 #e62600; /* LTR */
}

[dir="rtl"] .messages--error {
border-color: #f9c9bf transparent #f9c9bf #f9c9bf;
box-shadow: 8px 0 0 #e62600;
}

.messages--error p.error {
color: #a51b00;
}
